<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.beerslistv6.ui.main.mainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_viewBeerFragment"
            app:destination="@id/viewBeerFragment" />
        <action
            android:id="@+id/action_mainFragment_to_formBeerFragment"
            app:destination="@id/formBeerFragment" />
    </fragment>
    <fragment
        android:id="@+id/viewBeerFragment"
        android:name="com.example.beerslistv6.ui.viewBeer.viewBeerFragment"
        android:label="fragment_view_beer"
        tools:layout="@layout/fragment_view_beer" />
    <fragment
        android:id="@+id/formBeerFragment"
        android:name="com.example.beerslistv6.ui.formBeer.formBeerFragment"
        android:label="fragment_form_beer"
        tools:layout="@layout/fragment_form_beer" />
</navigation>